<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <packaging>pom</packaging>

  <modules>
    <module>core</module>
    <module>okrs-api</module>
    <module>okrs-core</module>
  </modules>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.7.4</version>
    <relativePath/>
  </parent>

  <groupId>org.ptit.okrs</groupId>
  <artifactId>okrs-backend</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>okrs-backend</name>
  <description>okrs-backend</description>

  <properties>
    <java.version>17</java.version>
    <mysql.version>8.0.30</mysql.version>
    <lombok.version>1.18.24</lombok.version>
    <h2.version>2.1.214</h2.version>
    <liquibase.version>4.17.0</liquibase.version>
    <swagger.version>2.7.0</swagger.version>
    <jwt.version>0.9.1</jwt.version>
    <hibernate-validator.version>6.0.10.Final</hibernate-validator.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- INTERNAL -->
      <dependency>
        <artifactId>core-api-exception</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-audit</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-authentication</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-email</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-exception</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-swagger</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-util</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>okrs-core</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>core-upload</artifactId>
        <groupId>org.ptit.okrs</groupId>
        <version>${project.version}</version>
      </dependency>

      <!-- MIGRATION -->
      <dependency>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-core</artifactId>
        <version>${liquibase.version}</version>
      </dependency>

      <!-- DATABASE -->
      <dependency>
        <groupId>com.h2database</groupId>
        <artifactId>h2</artifactId>
        <scope>runtime</scope>
        <version>${h2.version}</version>
      </dependency>
      <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <scope>runtime</scope>
        <version>${mysql.version}</version>
      </dependency>

      <!-- LOMBOK -->
      <dependency>
        <groupId>org.projectlombok</groupId>
        <artifactId>lombok</artifactId>
        <optional>true</optional>
        <version>${lombok.version}</version>
      </dependency>

      <!-- SWAGGER -->
      <dependency>
        <artifactId>springfox-swagger2</artifactId>
        <groupId>io.springfox</groupId>
        <version>${swagger.version}</version>
      </dependency>

      <dependency>
        <artifactId>springfox-swagger-ui</artifactId>
        <groupId>io.springfox</groupId>
        <version>${swagger.version}</version>
      </dependency>
      <!-- JSON WEB TOKEN -->
      <dependency>
        <groupId>io.jsonwebtoken</groupId>
        <artifactId>jjwt</artifactId>
        <version>${jwt.version}</version>
      </dependency>

      <!-- VALIDATION -->
      <dependency>
        <groupId>org.hibernate</groupId>
        <artifactId>hibernate-validator</artifactId>
        <version>${hibernate-validator.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>gitlab-maven</id>
      <url>https://gitlab.com/api/v4/projects/personal-maven-repository/packages/maven</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>gitlab-maven</id>
      <url>https://gitlab.com/api/v4/projects/40595068/packages/maven</url>
    </repository>
    <snapshotRepository>
      <id>gitlab-maven</id>
      <url>https://gitlab.com/api/v4/projects/40595068/packages/maven</url>
    </snapshotRepository>
  </distributionManagement>
</project>
